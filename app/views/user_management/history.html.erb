<div class="" style="margin: 0 auto;  " %>
 	<h2>Checkout history of User : <%= @user.email %></h2>
 	
 	<form>
	 	<div class="form-group">
		    <div class="col-md-12">
		        <div class="table-responsive">
		            <table class="table table-striped table-bordered table-advance table-hover">
		                <thead>
		                    <tr>
		                    	<th class="col-md-1 text-center">STT</th>
		                        <th class="col-md-1 text-center">ISBN</th>
		                        <th class="col-md-1 text-center">Title</th>
		                        <th class="col-md-2 text-center">Description</th>
		                        <th class="col-md-2 text-center">Authors</th>
		                        <th class="col-md-2 text-center">Cover</th>
		                        <th class="col-md-2 text-center">Checkout date</th>
		                        <th class="col-md-2 text-center">Return date</th>
		                        
		                    </tr>
		                </thead>

		                <tbody>
		                	<% @history = @user.histories %>
					 		<% if @history.empty?  %>
					 		<p>No found any histories for this user! </p>
					 		<% else %>
					 		  
					 		  <% for i in 1...@history.length %>
			                	<tr>
			                		<td><%= i %></td>
			                		
				                		<td><%=  !@history[i].book.blank? ? @history[i].book.ISBN : '' %></td>
				                		<td><%=  !@history[i].book.blank? ? @history[i].book.title : ''%></td>
				                		<td><%=  !@history[i].book.blank? ? @history[i].book.description : ''%></td>
				                		<td><%=  !@history[i].book.blank? ? @history[i].book.authors : '' %></td>
				                		<td><%= image_tag !@history[i].book.blank? ?  @history[i].book.image_url.to_s : '' %></td>
			                		
				                		<td><%=  @history[i].checkout_date.strftime("%Y-%m-%d %H:%M:%S")  unless @history[i].checkout_date.blank? %></td>
				                		<td><%=  @history[i].return_date.strftime("%Y-%m-%d %H:%M:%S") unless @history[i].return_date.blank? %></td>
			                	</tr>
					 			<% end %>
								
						    <% end %>
		    			</tbody>
		   		 </table>
		    	</div>
	   		</div>
	    </div>
 		<button class="right submit" style=""><%= link_to 'Back', '/users', :style => "color: #fff; font-weight: bold"%></button>
 	</form>
</div>
