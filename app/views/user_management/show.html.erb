<div class="authform">
  <h3>View User</h3>
  <form>
     <div class="form-group">
      <label>Username</label>
      <input autofocus = true value = <%= @user.username %> class = 'form-control' disabled />
    </div>
    <div class="form-group">
      <label>Role</label>
      <input autofocus = true value = <%= @user.role %> class = 'form-control' disabled />
    </div>
    <div class="form-group">
      <label>Email</label>
      <input autofocus = true value = <%= @user.email %> class = 'form-control' disabled />
    </div>
    <button class="left submit" style=""><%= link_to 'Back', '/users', :style => "color: #fff; font-weight: bold"%></button>
    <button class="right submit" style=""><%= link_to 'Show History',  history_user_management_path(@user), :style => "color: #fff; font-weight: bold"%></button>
  </form>
</div
